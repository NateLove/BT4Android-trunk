<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/TextView04"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:text="TextView" />

    <TextView
        android:id="@+id/default_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Default Tab"
        android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="center_vertical"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:text="TextView" />

    <TextView
        android:id="@+id/time_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="Number of Times to Show"
        android:textAppearance="?android:attr/textAppearanceMedium" android:gravity="fill_vertical"/>

    <TextView
        android:id="@+id/TextView02"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:text="TextView" />

    <TextView
        android:id="@+id/about_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.05"
        android:text="About" android:gravity="fill_vertical" android:textAppearance="?android:attr/textAppearanceMedium"/>

    <TextView
        android:id="@+id/TextView03"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#ffffff"
        android:text="TextView" />

    <LinearLayout
        android:id="@+id/ad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.48"
        android:orientation="vertical" >

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>